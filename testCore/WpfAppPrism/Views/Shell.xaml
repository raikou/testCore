<Window x:Class="WpfAppPrism.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPrism.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="Shell" Height="300" Width="300">
	<Grid>
		<TextBlock Text="{Binding MessageProvider.Message}" />
		<Grid>
			<DataGrid Name="ViewGrid" ItemsSource="{Binding}" Margin="10,38,10,66"></DataGrid>
			<TextBox x:Name="testMess" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="497"/>
			<Button Content="追加" HorizontalAlignment="Left" Margin="106,237,0,8" Width="75" Click="Button_Click_1" RenderTransformOrigin="0.5,0.5"/>
			<Button Content="削除" HorizontalAlignment="Left" Margin="196,237,0,8" Width="75" Click="Button_Click_2" RenderTransformOrigin="0.5,0.5"/>
		</Grid>
		<Button Content="追加更新" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Click="Button_Click" RenderTransformOrigin="0.491,-0.563" Height="22" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom"/>

	</Grid>

</Window>
